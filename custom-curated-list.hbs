{{!< default}}
{{!-- Template: Curated List (Index)
     Purpose: "Best of" lists, book recommendations, toolkits.
     The Ghost editor content renders in a grid-friendly layout
     where bookmark cards, images, and content blocks become
     a browseable resource library instead of a linear scroll. --}}

{{>content-header}}

<main class="container content" id="content">

  <article class="page page--curated {{post_class}}">

    {{#post}}

      <header class="page__header">
        <h1 class="page__title mt0">{{title}}</h1>
        {{#if custom_excerpt}}
        <p class="curated__subtitle">{{custom_excerpt}}</p>
        {{/if}}
      </header>

      {{#if feature_image}}
      <figure class="post__image">
        <img srcset="{{img_url feature_image size="s"}} 300w, {{img_url feature_image size="m"}} 600w, {{img_url
          feature_image size="l"}} 1000w, {{img_url feature_image size="xl"}} 2000w"
          sizes="(min-width: 1400px) 1400px, 92vw" src="{{img_url feature_image size="xl"}}"
          alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
        {{#if feature_image_caption}}
        <figcaption>{{feature_image_caption}}</figcaption>
        {{/if}}
      </figure>
      {{/if}}

      {{!-- Content renders in curated grid mode:
           Bookmark cards display as a grid, headings act as section dividers --}}
      <section class="page__content page__content--curated">
        {{content}}
      </section>

    {{/post}}
  </article>

</main>

{{!< default}} {{>content-header}}

  <main class="container content" id="content">

    <article class="post {{post_class}}">

      {{#post}}

      <header class="post__header">
        <h1 class="post__title">{{title}}</h1>

        <div class="post__meta">
          {{#match @custom.post_header_show_author}}
          {{t "Posted by"}} {{#primary_author}}<a href="{{url}}">{{name}}</a>{{/primary_author}}
          {{/match}}

          {{#match @custom.post_header_show_date}}
          {{#match @custom.post_header_show_author}} {{t "on"}} {{/match}}
          <time class="post__date" datetime="{{date format='YYYY-MM-DD'}}">
            {{date format="MMMM Do, YYYY"}}.
          </time>
          {{/match}}

          {{#match @custom.post_header_show_tags}}
          {{#if tags}}
          <span class="post__tags">
            {{tags prefix=(t "Tagged ")}}
          </span>
          {{/if}}
          {{/match}}
        </div>
      </header>

      {{#if feature_image}}
      <figure class="post__image">
        <img srcset="{{img_url feature_image size="s"}} 300w, {{img_url feature_image size="m"}} 600w, {{img_url
          feature_image size="l"}} 1000w, {{img_url feature_image size="xl"}} 2000w"
          sizes="(min-width: 1400px) 1400px, 92vw" src="{{img_url feature_image size="xl"}}"
          alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
        {{#if feature_image_caption}}
        <figcaption>{{feature_image_caption}}</figcaption>
        {{/if}}
      </figure>
      {{/if}}

      <section class="post__content">
        {{content}}
      </section>

      <footer class="post__footer">

        {{> subscribe-widget}}

        {{#match @custom.post_footer_show_author}}
        {{> author-info}}
        {{/match}}

        {{comments}}

        {{#match @custom.post_footer_show_related}}
        {{> related-posts}}
        {{/match}}

      </footer>


      {{/post}}

    </article>
  </main>
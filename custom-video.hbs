{{!< default}}
{{!-- Template: Video (Theater)
     Purpose: Posts where the primary content is a video embed.
     Features a full-width dark "cinema mode" video area at the top
     with the post body (transcript, notes) in a readable column below. --}}

{{>content-header}}

<main class="container content" id="content">

  <article class="page page--video {{post_class}}">

    {{#post}}

      <header class="page__header">
        <h1 class="page__title mt0">{{title}}</h1>

        <div class="post__meta">
          {{#primary_author}}<a href="{{url}}">{{name}}</a>{{/primary_author}}
          <time class="post__date" datetime="{{date format='YYYY-MM-DD'}}">
            {{date format="MMMM Do, YYYY"}}
          </time>
        </div>
      </header>

      {{!-- Cinema mode: feature image as poster if no video embed leads the content --}}
      {{#if feature_image}}
      <figure class="video__poster">
        <img srcset="{{img_url feature_image size="s"}} 300w, {{img_url feature_image size="m"}} 600w, {{img_url
          feature_image size="l"}} 1000w, {{img_url feature_image size="xl"}} 2000w"
          sizes="(min-width: 1400px) 1400px, 92vw" src="{{img_url feature_image size="xl"}}"
          alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
      </figure>
      {{/if}}

      {{!-- Video content: embeds will be full-width via the cinema wrapper,
           then text content flows in a readable column --}}
      <section class="page__content page__content--video">
        {{content}}
      </section>

    {{/post}}
  </article>

</main>

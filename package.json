{
  "name": "tidslinje",
  "description": "Tidslinje: A minimalist, timeline-focused Ghost theme for chronicling your existence before the inevitable heat death of the universe.",
  "demo": "https://github.com/klppl",
  "version": "1.9.0",
  "engines": {
    "ghost": ">=5.104.2"
  },
  "scripts": {
    "zip": "zip -r tidslinje.zip . -x '*.git*' -x 'node_modules/*' -x '.DS_Store' -x '.antigravity/*' -x '*.zip'"
  },
  "author": {
    "name": "alexander",
    "email": "hej@klippel.se",
    "url": "https://github.com/klppl"
  },
  "config": {
    "posts_per_page": 20,
    "card_assets": {
      "exclude": [
        "bookmark"
      ]
    },
    "custom": {
      "font": {
        "type": "select",
        "options": [
          "Serif",
          "Sans-serif",
          "Monospaced"
        ],
        "default": "Monospaced"
      },
      "body_font_size": {
        "type": "select",
        "options": [
          "Small",
          "Default",
          "Large"
        ],
        "default": "Default"
      },
      "timeline_density": {
        "type": "select",
        "options": [
          "Compact",
          "Comfortable",
          "Spacious"
        ],
        "default": "Comfortable"
      },
      "container_width": {
        "type": "select",
        "options": [
          "Narrow",
          "Normal",
          "Wide"
        ],
        "default": "Normal"
      },
      "timeline_icon_position": {
        "type": "select",
        "options": [
          "Standard",
          "Left",
          "Right",
          "None"
        ],
        "default": "Standard"
      },
      "header_alignment": {
        "type": "select",
        "options": [
          "Center",
          "Left"
        ],
        "default": "Center"
      },
      "icon_framing": {
        "type": "select",
        "options": [
          "Round",
          "Squircle",
          "Rounded",
          "Sharp"
        ],
        "default": "Round"
      },
      "navigation_style": {
        "type": "select",
        "options": [
          "Pill",
          "Underline",
          "Minimal",
          "Brackets",
          "Block",
          "Cursor"
        ],
        "default": "Pill"
      },
      "navigation_size": {
        "type": "select",
        "options": [
          "0.75rem",
          "0.875rem",
          "1rem",
          "1.25rem",
          "1.5rem",
          "1.75rem"
        ],
        "default": "1rem"
      },
      "welcome_mat_optin_cta": {
        "type": "text",
        "default": "",
        "description": "Enter a newsletter subscribe pitch to enable the Welcome Mat optin widget on your homepage."
      },
      "post_header_show_author": {
        "type": "boolean",
        "default": true
      },
      "post_header_show_date": {
        "type": "boolean",
        "default": true
      },
      "post_header_show_tags": {
        "type": "boolean",
        "default": true
      },
      "post_footer_show_author": {
        "type": "boolean",
        "default": true
      },
      "post_footer_show_related": {
        "type": "boolean",
        "default": true
      },
      "related_posts_show_excerpt": {
        "type": "boolean",
        "default": true,
        "description": "Show excerpt text in related posts cards"
      }
    }
  },
  "gpm": {
    "type": "theme",
    "categories": [
      "Minimal",
      "Personal",
      "Retro",
      "Dark mode",
      "Ghost 6"
    ]
  },
  "keywords": [
    "tidslinje",
    "timeline",
    "minimalist",
    "nihilism",
    "performance",
    "ghost-theme"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/klppl/tidslinje.git"
  }
}
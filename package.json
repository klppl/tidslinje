{
  "name": "tidslinje",
  "description": "Tidslinje: A minimalist, timeline-focused Ghost theme for chronicling your existence before the inevitable heat death of the universe.",
  "demo": "https://github.com/klppl",
  "version": "1.2.2",
  "engines": {
    "ghost": ">=5.104.2"
  },
  "scripts": {
    "zip": "zip -r tidslinje.zip . -x '*.git*' -x 'node_modules/*' -x '.DS_Store' -x '.antigravity/*' -x '*.zip'"
  },
  "author": {
    "name": "alexander",
    "email": "hej@klippel.se",
    "url": "https://github.com/klppl"
  },
  "config": {
    "posts_per_page": 50,
    "card_assets": {
      "exclude": [
        "bookmark"
      ]
    },
    "custom": {
      "font": {
        "type": "select",
        "options": [
          "Serif",
          "Sans-serif",
          "Monospaced"
        ],
        "default": "Monospaced"
      },
      "welcome_mat_optin_cta": {
        "type": "text",
        "default": "",
        "description": "Enter a newsletter subscribe pitch to enable the Welcome Mat optin widget on your homepage."
      }
    }
  },
  "gpm": {
    "type": "theme",
    "categories": [
      "Minimal",
      "Personal",
      "Retro",
      "Dark mode",
      "Ghost 6"
    ]
  },
  "keywords": [
    "tidslinje",
    "timeline",
    "minimalist",
    "nihilism",
    "performance",
    "ghost-theme"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/klppl/tidslinje.git"
  }
}
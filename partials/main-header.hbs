{{!-- Component: Site-wide structural header --}}
<header class="main-header" id="main-header">
  <div class="container">
    {{!-- Layout: Branding & Description --}}
    <div class="site-branding">
      {{#if @site.icon}}
      <div class="site-icon-wrapper {{#match @custom.icon_framing " Squircle"}}is-squircle{{/match}}{{#match
        @custom.icon_framing "Rounded" }}is-rounded{{/match}}{{#match @custom.icon_framing "Sharp"
        }}is-sharp{{/match}}{{#match @custom.icon_framing "Round" }}is-round{{/match}}">
        <a href="{{@site.url}}"><img src="{{@site.icon}}" alt="{{@site.title}} icon" /></a>
      </div>
      {{/if}}
      {{#is "home"}}
      <h1 class="site-title">{{@site.title}}</h1>
      {{else}}
      <p class="site-title">{{@site.title}}</p>
      {{/is}}
      <p class="site-description">{{@site.description}}</p>
    </div>
  </div>
</header>

{{!-- Layout: Primary Navigation (outside header for sticky positioning) --}}
<div class="top-nav {{#match @custom.navigation_style " Underline"}}nav-style-underline{{/match}}{{#match
  @custom.navigation_style "Minimal" }}nav-style-minimal{{/match}}{{#match @custom.navigation_style "Pill"
  }}nav-style-pill{{/match}}{{#match @custom.navigation_style "Brackets" }}nav-style-brackets{{/match}}{{#match
  @custom.navigation_style "Block" }}nav-style-block{{/match}}{{#match @custom.navigation_style "Cursor"
  }}nav-style-cursor{{/match}} {{#match @custom.navigation_size "0.75rem" }}nav-size-0-75rem{{/match}}{{#match
  @custom.navigation_size "0.875rem" }}nav-size-0-875rem{{/match}}{{#match @custom.navigation_size "1rem"
  }}nav-size-1rem{{/match}}{{#match @custom.navigation_size "1.25rem" }}nav-size-1-25rem{{/match}}{{#match
  @custom.navigation_size "1.5rem" }}nav-size-1-5rem{{/match}}{{#match @custom.navigation_size "1.75rem"
  }}nav-size-1-75rem{{/match}}">
  <nav>
    {{navigation}}
  </nav>
</div>

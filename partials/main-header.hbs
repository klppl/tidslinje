{{!-- Component: Site-wide structural header --}}
<header class="main-header" id="main-header">

  {{!-- Layout: Primary Navigation --}}
  <div class="top-nav">
    <nav>
      {{navigation}}
    </nav>
  </div>

  <div class="container">
    {{!-- Layout: Branding & Description --}}
    <div class="site-branding">
      {{#if @site.icon}}
      <div class="site-icon-wrapper {{#match @custom.icon_framing " Squircle"}}is-squircle{{/match}}{{#match
        @custom.icon_framing "Rounded" }}is-rounded{{/match}}{{#match @custom.icon_framing "Sharp"
        }}is-sharp{{/match}}{{#match @custom.icon_framing "Round" }}is-round{{/match}}">
        <a href="{{@site.url}}"><img src="{{@site.icon}}" alt="{{@site.title}} icon" /></a>
      </div>
      {{/if}}
      <h1 class="site-title">{{@site.title}}</h1>
      <p class="site-description">{{@site.description}}</p>
    </div>

    {{!-- Layout: Visual separator --}}
    <div class="header-separator"></div>

  </div>
</header>
<br>
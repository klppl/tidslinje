{{!-- Pagination: Previous page link display --}}
{{#if pagination.prev}}
<br>
<div class="center-text">
  {{t "Page"}} <strong>{{pagination.page}}</strong> {{t "of"}}
  <strong>{{pagination.pages}}</strong>
</div>
<br>
{{/if}}

{{!-- Loop: Post collection rendering --}}
<div class="timeline-container">
  {{#foreach posts visibility="all"}}

  <div class="timeline-item">

    {{!-- LEFT: Date --}}
    <div class="timeline-left">
      <time class="timeline-date" datetime="{{date format='YYYY-MM-DD'}}">
        {{date format="YYYY-MM-DD"}}
      </time>
    </div>

    {{!-- CENTER: Marker/Icon --}}
    <div class="timeline-marker">
      <div class="timeline-icon">
        {{> "post-icon"}}
      </div>
    </div>

    {{!-- RIGHT: Content --}}
    <div class="timeline-right">
      {{#has tag="#micro"}}
      <div class="timeline-content timeline-content--micro">
        {{{content}}}
        <a href="{{url}}" class="timeline-permalink" aria-label="Permalink">#</a>
      </div>
      {{else}}
      <h2 class="timeline-title">
        <a href="{{url}}">{{title}}</a>
        {{#if featured}}<span>â˜…</span>{{/if}}
      </h2>

      <div class="timeline-excerpt">
        {{excerpt words="30"}}...
      </div>

      <a class="timeline-read-more" href="{{url}}">{{t "Read more"}} &rarr;</a>
      {{/has}}
    </div>

  </div>

  {{/foreach}}
</div>


{{!-- Pagination: Numeric page links --}}
<div class="center-text">{{pagination}}</div>

<br>
{{!-- Component: Dynamic Timeline Icon Selection --}}
{{!-- Logic:
1. Priority: First Tag Description (Internal or Public)
2. Action: Wrap icon in a link to the tag's page
3. Default: Pencil emoji (✍️)
--}}

{{#foreach tags visibility="internal" limit="1"}}
<span title="{{name}}" class="timeline-icon-link" aria-label="{{name}}">
    {{#if description}}
    <span aria-hidden="true">{{description}}</span>
    {{else}}
    <span aria-hidden="true">✍️</span>
    {{/if}}
</span>
{{else}}
<span class="timeline-icon-link" aria-hidden="true">✍️</span>
{{/foreach}}